<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElmiraApplication.MainPage">

    <ScrollView>

        <VerticalStackLayout
            Spacing="10"
            Padding="30"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Start">

            <Image
                    x:Name="logo"
                    Source="Images/logo2.png"
                    HeightRequest="200"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"/>

            <Button Text="SCAN QR Code" Background="{StaticResource Primary}"   HorizontalOptions="Center"
                    VerticalOptions="End" Clicked="Button_Clicked">

            </Button>
            <Label x:Name="qrCodeLabel"
                   Text=""
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Start"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
